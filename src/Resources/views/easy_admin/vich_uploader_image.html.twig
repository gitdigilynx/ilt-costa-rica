{# app/Resources/views/easy_admin/vich_uploader_image.html.twig #}
{% if value is not null and value != '' %}
    <a href="#" class="easyadmin-thumbnail" data-featherlight="#easyadmin-lightbox-{{ item.id }}"
       data-featherlight-close-on-click="anywhere">
        {# the second parameter is the name of the property with the UploadableField annotation #}
        <img src="{{ vich_uploader_asset(item, field_options.property ~ 'Binary' ) }}">
    </a>

    <div id="easyadmin-lightbox-{{ item.id }}" class="easyadmin-lightbox">
        {# the second parameter is the name of the property with the UploadableField annotation #}
        <img src="{{ vich_uploader_asset(item, field_options.property ~ 'Binary') }}">
    </div>
{% endif %}
