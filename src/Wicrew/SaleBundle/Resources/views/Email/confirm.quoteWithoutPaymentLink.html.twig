                                    <div><span
                                        class="item-trip-label">Airline:</span> {{ item.dropAirlineCompany }}
                                    </div>{% endif %}
                                {% if item.dropFlightNumber != '' %}
                                    <div><span
                                        class="item-trip-label">Flight #:</span> {{ item.dropFlightNumber }}
                                    </div>{% endif %}
                            {% endif %}
